<% provide :title, t("sessions.new.login") %>
<h1 class="text-center">Log in</h1>

<div class="container">

  <div class="col-md-6 col-md-offset-3">
    <% if flash[:danger] %>
      <div class="alert alert-danger"><%= flash[:danger] %></div>
    <% end %>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :account, t("sessions.new.account") %>
      <%= f.text_field :account, class: "form-control" %>

      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <br>
      <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
    <% end %>

    <%= link_to t("sessions.new.signup_now"), signup_path %>
  </div>
</div>
