<header>
  <div class = "container">
    <%= link_to t("layout.header.story"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= t "layouts.list" %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("layouts.header.list"), "#" %></li>
            <li><%= link_to t("layouts.header.list"), "#" %></li>
          </ul>
        </li>
        <%= render "categories/categories" %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if session[:permission_id] == 3 %>
            <%= render "layouts/header_admin" %>
          <% elsif session[:permission_id] == 2 %>
            <%= render "layouts/header_uploader" %>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <span class="glyphicon glyphicon-user"></span>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li class="divider"></li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <%= t "layouts.header.logout" %>
                  <span class="glyphicon glyphicon-log-out"></span>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
              <%= t "layouts.header.login" %>
              <span class="glyphicon glyphicon-log-in"></span>
            <% end %>
          </li>
          <li>
            <%= link_to t("layouts.header.signup"), signup_path %>
          </li>
        <% end %>
        <li>
          <%= link_to image_tag("icon_en.png", class: "icon_en"), locale:"en" %>
        </li>
      </ul>
    </nav>
  </div>
</header>
